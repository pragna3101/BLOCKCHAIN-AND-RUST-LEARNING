{
  "name": "Speedrun Stylus Dev Environment",
  "image": "meetpaladiya44/speedrun-codespaces:0.1",
  "remoteUser": "vscode",
  "hostRequirements": {
    "cpus": 4,
    "memory": "16gb",
    "storage": "32gb"
  },
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "installOhMyZsh": true,
      "username": "vscode"
    },
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "version": "latest",
      "moby": true,
      "dockerDashComposeVersion": "v2"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "rust-lang.rust-analyzer",
        "tamasfe.even-better-toml",
        "serayuzgur.crates",
        "vadimcn.vscode-lldb",
        "JuanBlanco.solidity",
        "ms-vscode.hexeditor",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "ms-azuretools.vscode-docker"
      ],
      "settings": {
        "rust-analyzer.checkOnSave.command": "clippy",
        "rust-analyzer.cargo.allFeatures": true,
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "[rust]": {
          "editor.defaultFormatter": "rust-lang.rust-analyzer"
        },
        "terminal.integrated.defaultProfile.linux": "bash"
      }
    }
  },
  "postCreateCommand": "bash -lc \"echo 'üîç Verifying pre-installed tools...' && node --version && yarn --version && rustc --version && cargo --version && (cargo-stylus --version || true) && (forge --version || true) && docker --version && echo '‚úÖ Tools verified'; if [ -f yarn.lock ]; then echo 'üì¶ Installing yarn dependencies...' && yarn install --frozen-lockfile; else echo '‚ÑπÔ∏è yarn.lock not found ‚Äî skipping install'; fi\"",
  "postStartCommand": "echo '‚úÖ Codespace started ‚Äî ready. Docker is available.'",
  "postAttachCommand": "bash -lc \"git config --global --add safe.directory '${containerWorkspaceFolder:-/workspace}' || true\"",
  "forwardPorts": [3000, 8545, 5173],
  "portsAttributes": {
    "3000": {
      "label": "Application",
      "onAutoForward": "notify"
    },
    "8545": {
      "label": "Anvil/Local Blockchain",
      "onAutoForward": "notify"
    },
    "5173": {
      "label": "Vite Dev Server",
      "onAutoForward": "silent"
    }
  },
  "containerEnv": {
    "RUST_BACKTRACE": "1",
    "CARGO_TERM_COLOR": "always",
    "CARGO_INCREMENTAL": "1"
  },
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=cached",
  "workspaceFolder": "/workspace",
  "mounts": [
    "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
  ]
}